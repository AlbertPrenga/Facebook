@model Post

 <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Add a comment to post it!</p>

                                <form action="/Post/Add" method="post" class="mx-1 mx-md-4">
                            
                                     <div class="d-flex flex-row align-items-center mb-4">
                                        <div class="form-outline flex-fill mb-0">
                                            <input asp-for="Comment" class="form-control" />
                                            <label class="form-label" asp-for="Comment"></label>
                                            <span asp-validation-for="Comment"></span>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-primary btn-lg">Create Post</button>
                                    </div>
                                </form>