

<h4>Users you may want to connect with:</h4>

<div class="row">
    <div class="col-sm-3">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var perdorues in ViewBag.perdoruesit)
                {
                    <tr>
                        <td><a href="/users/@perdorues.UserId">@perdorues.Name</a></td>
                        <td><a href="/SendR/@perdorues.UserId">Send Request</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-sm-2"></div>
    <div class="col-sm-6">
    <a href="/">My Profile</a>
    <a href="/Logout">Logout</a>
    </div>

</div>